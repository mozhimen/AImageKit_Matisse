<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Animation.Bottom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_up_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_down_out</item>
    </style>

    <style name="Matisse.Default" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏相关-->
        <item name="colorPrimary">@color/primary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!--顶部导航条高度-->
        <item name="Navigation_Height">@dimen/navigation_height</item>
        <!--顶部导航条背景色-->
        <item name="Navigation_Background">@color/navigation_bg</item>
        <!--顶部导航条返回按钮资源图-->
        <item name="Navigation_ResBack">@drawable/icon_arrow_right_white</item>
        <!--图片预览界面背景色-->
        <item name="Preview_Background">@color/preview_bg</item>

        <!--底部工具栏背景色-->
        <item name="BottomBar_Background">@color/bottomTool_bg</item>
        <!--底部工具栏高度-->
        <item name="BottomBar_Height">@dimen/bottom_tool_height</item>

        <!--返回按钮文字 当无文字是可设置为空字符串 如下-->
        <item name="Navigation_TextBack">@string/button_null</item>
        <!--返回按钮颜色-->
        <item name="Navigation_TextColorBack">@color/color_base</item>
        <!--返回按钮文字大小-->
        <item name="Navigation_TextSizeBack">@dimen/text_back</item>

        <item name="Navigation_TextSure">@string/button_sure</item>
        <!--确定按钮颜色-->
        <item name="Navigation_TextColorSure">@color/color_base</item>
        <!--确认按钮文字大小-->
        <item name="Navigation_TextSizeSure">@dimen/text_sure</item>

        <item name="BottomBarPreview_Text">@string/button_preview</item>
        <!--预览按钮颜色-->
        <item name="BottomBarPreview_TextColor">@color/text_preview</item>
        <!--预览按钮文字大小-->
        <item name="BottomBarPreview_TextSize">@dimen/text_preview</item>

        <item name="BottomBarOriginal_Text">@string/button_original</item>
        <!--原图选择控件文字颜色-->
        <item name="BottomBarOriginal_TextColor">@color/text_original</item>
        <!--原图按钮文字大小-->
        <item name="BottomBarOriginal_TextSize">@dimen/text_original</item>

        <item name="BottomBarAlbum_Text">@string/album_name_all</item>
        <!--查看全部相册文件夹按钮颜色-->
        <item name="BottomBarAlbum_TextColor">@color/text_album</item>
        <!--查看全部相册按钮文字大小-->
        <item name="BottomBarAlbum_TextSize">@dimen/text_album</item>
        <!--相册文件夹内部列表item颜色-->
        <item name="ItemAlbum_TextColor">@color/text_item_album</item>
        <!--查看全部相册内item文字大小-->
        <item name="ItemAlbum_TextSize">@dimen/text_item_album</item>

        <!--列表中可拍照状态下相机item文字颜色-->
        <item name="ItemPhoto_TextColor">@color/text_camera</item>
        <!--列表中可拍照状态下相机item文字大小-->
        <item name="ItemPhoto_TextSize">@dimen/text_camera</item>

        <item name="Preview_TextBack">@string/button_back</item>
        <item name="Preview_TextConfirm">@string/button_sure_default</item>

        <!--选中控件背景色-->
        <item name="ItemCheckView_BackgroundColor">@color/selector_base_text</item>
        <!--选中控件圆环边框颜色-->
        <item name="ItemCheckView_BorderColor">@color/item_checkCircle_borderColor</item>
        <!--原图radio控件颜色-->
        <item name="ItemCheckView_Theme">@color/selector_base_text</item>

        <!--空状态文字颜色-->
        <item name="EmptyBar_TextColor">@color/text_empty</item>
        <!--空状态文字大小-->
        <item name="EmptyBar_TextSize">@dimen/text_empty</item>
        <item name="EmptyBar_Text">@string/empty_text</item>
        <!--空状态资源图-->
        <item name="EmptyBar_Res">@drawable/ic_empty_zhihu</item>

        <!--图片加载占位图-->
        <!--<item name="Item_placeholder">@drawable/zhihu_item_placeholder</item>-->
    </style>
</resources>